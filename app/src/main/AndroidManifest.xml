<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ulan.munduz.manager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/munduz_admin"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/munduz_admin"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".MainApplication">
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.products.ProductsActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
        </activity>

        <activity android:name="com.ulan.munduz.manager.ui.add.AddProductActivity"/>
        <activity android:name=".ui.orders.OrdersActivity"/>
        <activity android:name=".ui.detail.DetailsActivity"/>
        <activity android:name=".ui.slider.AddSliderActivity"/>
    </application>
</manifest>