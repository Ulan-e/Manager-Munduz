<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        app:contentInsetEnd="0dp"
        app:contentInsetEndWithActions="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Менеджер"
        app:titleTextColor="@color/white"></androidx.appcompat.widget.Toolbar>


    <Button
        android:id="@+id/call_add_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="?android:selectableItemBackground"
        android:text="Добавить товар"
        android:textSize="14sp" />

    <Button
        android:id="@+id/add_slider_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="?android:selectableItemBackground"
        android:text="Добавить фото для слайдера"
        android:textSize="14sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/call_manage_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="?android:selectableItemBackground"
        android:text="Управление товарами"
        android:textSize="14sp"
        />

    <Button
        android:id="@+id/call_orders_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="?android:selectableItemBackground"
        android:text="Заказы товаров"
        android:textSize="14sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/call_message_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="?android:selectableItemBackground"
        android:text="Написать разработчику"
        android:textSize="14sp" />

</LinearLayout>