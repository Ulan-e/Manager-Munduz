<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/product_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        app:contentInsetEnd="0dp"
        app:contentInsetEndWithActions="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/white">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/product_toolbar">

    <!-- Category of product -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="4dp"
        android:text="@string/category"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/product_category"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="4dp"
        android:textSize="16sp" />


    <!-- Name of product -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="@string/product_name"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="4dp"
        android:inputType="text"
        android:maxLength="40"
        android:textSize="16sp" />


    <!-- Description of product -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="@string/product_desc"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/product_desc"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="4dp"
        android:inputType="textMultiLine"
        android:maxLength="210"
        android:maxLines="4"
        android:textSize="16sp" />


    <!-- Cost of product -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="@string/product_cost"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/product_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="4dp"
        android:inputType="numberDecimal"
        android:maxLength="7"
        android:textSize="16sp" />

    <!-- Price for product -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
            android:text="Цеза за"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/product_price_for"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentRight="true"
            android:textSize="16sp"/>

    </RelativeLayout>

    <!-- Recommended of product -->
    <Switch
        android:id="@+id/product_visibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/recommend"
        android:textSize="15sp"/>


    <!-- Image of product-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="@string/product_image"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/choose_product_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_add_a_photo_gray_24dp" />

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp"
            android:background="@color/white"
            android:clickable="true" />
    </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/add_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:textSize="14sp"
        android:text="Добавить"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>